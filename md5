    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
            try {
        
            MessageDigest hash = MessageDigest.getInstance("MD5");
         
        hash.update(jTextField1.getText().getBytes());
        byte [] messageDigest =hash.digest();
        if (jTextField1.getText().getBytes() != null){
       StringBuilder pohashu = new StringBuilder();
            for (byte b : messageDigest) {
                pohashu.append(Integer.toHexString(0xFF & b));
                 jTextField2.setText(String.valueOf(pohashu));
            }
            }
            else{
                    System.out.println("Wpisz jakies dane");
                    
                    };
         
        
                } catch(NoSuchAlgorithmException e){
                throw new RuntimeException(e);
            }
                  
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
